<%= form_for( @user , remote: true) do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name %><br> 

    <%= f.label :Email %> 
    <%= f.email_field :email, placeholder: "you@example.com"%><br>

    <%= f.label :Password %> 
    <%= f.password_field :password %><br> 

    <%= f.label :Confirm_password %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>
